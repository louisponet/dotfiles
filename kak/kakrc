	vnew  %{rename-client jump
	                         set global jumpclient jump
	                         hnew  %{rename-client tools
	                         set global toolsclient tools
	                         nop %sh{tmux resize-pane -y $(expr $(tmux display -p '#{window_height}') \* 20 \/ 100)}}}
 	nop %sh{tmux resize-pane -y $(expr $(tmux display -p '#{window_height}') \* 20 \/ 100)}
	focus client0
	verdi-horizontal
	# rename-client julia-repl
	focus client0
}

